<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="text_line.val">
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/rectangle_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="space">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

   <!-- Lan -->

    <style name="line_lan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_line.lan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">6</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="text_line.val.lan">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="space_lan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
    </style>


</resources>